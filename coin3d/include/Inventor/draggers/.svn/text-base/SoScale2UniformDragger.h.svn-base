	SO_KIT_HEADER(SoScale2UniformDragger);
	
	SO_KIT_CATALOG_ENTRY_HEADER(feedback);
	SO_KIT_CATALOG_ENTRY_HEADER(feedbackActive);
	SO_KIT_CATALOG_ENTRY_HEADER(feedbackSwitch);
