#ifndef COIN_SOSCALE2UNIFORMDRAGGER_H
#define COIN_SOSCALE2UNIFORMDRAGGER_H

#include <Inventor/draggers/SoDragger.h>
#include <Inventor/fields/SoSFVec3f.h>
